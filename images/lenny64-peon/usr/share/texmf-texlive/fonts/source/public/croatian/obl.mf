mode_setup;
Pt#:=3/4Pt#;
 u#:=.8Pt#; font_quad= 24u#;
            font_normal_space= 8u#;
            font_normal_stretch= 3u#;
            font_normal_shrink= 1u#;
 em#:=10Pt#; cap#:=7Pt#;
