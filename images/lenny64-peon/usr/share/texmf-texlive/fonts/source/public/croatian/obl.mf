input oblm  % mala slova


input glz  % znakovi



ligtable "c": "c" =: oct"013",  "h" =: oct"011";
ligtable "s": "s" =: oct"014"; %umjesto sh
ligtable "z":    "z" =: oct"015", "o" kern -.5u#,
              "u" kern -.5u#;
%ligtable "d": "d" =: oct"016"; % "d" =: oct"012";
ligtable "y": "a" =: "w", "e" =: "w", "u" =: "5";
ligtable "-": "-" =: oct"173";
%ligtable "e": "i" kern -.5u#;
%ligtable "f": "o" kern -u#, "u" kern -u#, "i" kern -.5u#, "g" kern-.5u#;
%ligtable "i": "f" kern -.5u#;
%ligtable "r": "k" kern -.5u#;
%ligtable "n": "a" kern -.5u#;
%ligtable "j": "a" kern -.5u#;

u#:=4/3u#;



ligtable "C": "c" =: oct"023", "C" =: oct "023", "H" =:
                     oct"021", "h" =: oct"021";
ligtable "S": "S" =: oct"024",  "s" =: oct"024";
ligtable "Z": "Z" =: oct"025", "z"=: oct"025",
              "O" kern -.5u#,
              "u" kern -.5u#;
%ligtable "D": "d" =: oct"026", "D" =: oct"026"; % "d" =: oct"022";
ligtable "Y": "a" =: "W", "A" =: "W", "u" =: "2", "U" =: "2";
%ligtable "E": "I" kern -.5u#;
%ligtable "F": "O" kern -u#, "U" kern -u#, "I" kern -.5u#, "G" kern-.5u#;
%ligtable "I": "F" kern -.5u#;
%ligtable "R": "K" kern -.5u#;
%ligtable "N": "A" kern -.5u#;




end.



