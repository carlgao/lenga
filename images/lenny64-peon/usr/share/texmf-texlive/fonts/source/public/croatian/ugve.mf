mode_setup;
 pt#:=4/3pt#;
 u#:=2*.8pt#; font_quad= 24u#;
            font_normal_space= 8u#;
            font_normal_stretch= 3u#;
            font_normal_shrink= 1u#;
 em#:=2*10pt#; cap#:=2*7pt#;
 thin#:=3*2/3pt#; thick#:=1.5*1.15*5/6pt#;
 o#:=1/5pt#;
define_pixels(em,cap);
define_blacker_pixels(thin,thick);
