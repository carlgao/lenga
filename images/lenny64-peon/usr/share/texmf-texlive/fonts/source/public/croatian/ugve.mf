input croblv  % velika slova
%input croblm  % mala slova
input glz  % znakovi





ligtable "C":  "C" =: oct "023", "H" =:
                     oct"021", "X" =: oct"001";
ligtable "S": "S" =: oct"024";
ligtable "Z": "Z" =: oct"025", "X" =: oct"007",
              "O" kern -.5u#;
ligtable "D": "D" =: oct"026"; % "d" =: oct"022";
ligtable "Y": "A" =: oct"003",
              "E" =: oct"003",
              "U" =: oct"005";
ligtable "E": "I" kern -.5u#;
ligtable "F": "O" kern -u#, "U" kern -u#, "I" kern -.5u#, "G" kern-.5u#;
ligtable "I": "F" kern -.5u#;
ligtable "R": "K" kern -.5u#;
ligtable "N": "A" kern -.5u#;




end.




